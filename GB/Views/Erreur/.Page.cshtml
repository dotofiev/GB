@{
    Layout = "~/Views/Shared/_LayoutErreur.cshtml";
}

<div class="main_container">

    <div class="col-md-12">

        <div class="col-middle">

            <div class="text-center">

                <h1 class="error-number">
                    @ViewBag.code
                </h1>

                <h2>
                    @ViewBag.message
                </h2>

                <p>
                    @ViewBag.description
                </p>

                <div class="mid_center">

                    <div class="col-lg-12 text-center">

                        <a class="btn btn-lg btn-default" href="@ViewBag.url">
                            <i class="fa fa-sign-in"></i> @ViewBag.Lang.Reconnect
                        </a>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>