
<!-- form 1 -->
<div class="modal fade bs-example-modal-lg" id="modal_form" role="alert" data-backdrop="static" data-keyboard="false">
    
    <div id="modal_form_taille" class="modal-dialog">
        
        <div class="modal-content">
            
            <div class="modal-body">

                <!-- Header -->
                <p style="font-weight: bold; font-size: 18px;">
                    <!-- Title -->
                    <span id="modal_form_titre">
                        <i class="glyphicon glyphicon-info-sign text-info"></i> @ViewBag.Lang.Form
                    </span>
                    <!-- Close bouton -->
                    <button type="button" class="close float-right" data-dismiss="modal" aria-hidden="true" style="font-weight: bold;">
                        <i class="fa fa-times"></i>
                    </button>
                </p>

                <!-- Body -->
                <div id="modal_form">

                    <form method="post" id="form" name="form" enctype="multipart/form-data" data-parsley-validate>

                        <div class="row">

                            <!-- Id -->
                            <input type="hidden" id="form_id" name="id" value="0" />

                            <!-- ligne -->
                            <div class="col-xs-12 col-lg-6">
                                
                                <div class="thumbnail">

                                    <center>
                                        <img id="form_image" class="img-responsive" src="~/Resources/images/png/Utilisateur.png" style="height: 138px;" alt="Logo" title="Logo" />
                                        <input type="file" id="form_image_fichier" name="logo" class="hidden-lg" accept="image/.jpeg,.png,.gif,.jpg" />
                                    </center>

                                    <hr class="gb-hr" />

                                    <div class="btn-group">
                                        <button id="form_image_btn" class="btn btn-default btn-sm" type="button">
                                            <i class="fa fa-upload"></i> @ViewBag.Lang.Browse
                                        </button>
                                        <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="caret"></span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li>
                                                <a href="javascript:;" id="form_image_btn_delete">
                                                    <i class="fa fa-upload"></i> @ViewBag.Lang.Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <span id="form_image_label" style="padding-left: 5px;">
                                        @ViewBag.Lang.Empty ...
                                    </span>

                                </div>

                            </div>
                            <!-- /ligne -->

                            <!-- ligne -->
                            <div class="col-xs-12 col-lg-6">

                                <div class="row">

                                    <!-- ligne -->
                                    <div class="col-xs-12 col-lg-12">
                                        <div class="form-group">
                                            <label for="form_libelle">@ViewBag.Lang.Name :</label>
                                            <input class="form-control" type="text" id="form_libelle" name="libelle" placeholder="@ViewBag.Lang.Name .*" required />
                                        </div>
                                    </div>
                                    <!-- ./ligne -->

                                    <!-- ligne -->
                                    <div class="col-xs-12 col-lg-12">
                                        <div class="form-group">
                                            <label for="form_code">@ViewBag.Lang.Abbreviation :</label>
                                            <input class="form-control" type="text" id="form_code" name="code" placeholder="Code.*" required />
                                        </div>
                                    </div>
                                    <!-- ./ligne -->
                                    
                                    <!-- ligne -->
                                    <div class="col-xs-12 col-lg-12">
                                        <div class="form-group">
                                            <label for="form_type">Type :</label>
                                            <input class="form-control" type="text" id="form_type" name="type" placeholder="Type .*" required />
                                        </div>
                                    </div>
                                    <!-- ./ligne -->

                                </div>

                            </div>
                            <!-- /ligne -->                            

                            <!-- ligne -->
                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_cobac_id">Cobac ID :</label>
                                    <input class="form-control" type="text" id="form_cobac_id" name="cobac_id" placeholder="Cobac ID .*" required />
                                </div>
                            </div>

                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_pub">PUB :</label>
                                    <input class="form-control" type="text" id="form_pub" name="pub" placeholder="PUB .*" required />
                                </div>
                            </div>
                            <!-- ./ligne -->

                            <!-- ligne -->
                            <div class="col-xs-12 col-lg-12">
                                <div class="form-group">
                                    <label for="form_motto">Motto :</label>
                                    <input class="form-control" type="text" id="form_motto" name="motto" placeholder="Motto .*" required />
                                </div>
                            </div>
                            <!-- ./ligne -->

                        </div>

                    </form>

                </div>

                <!--Alert Message -->
                <div id="gbAlert"></div>

            </div>

            <div class="modal-footer">
                
                <!-- Bouton de fermiture du modal -->
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">
                    <i class="glyphicon glyphicon-remove"></i> @ViewBag.Lang.Close
                </button>
                
                <!-- Bouton d'enregistrement du formulaire -->
                <button class="btn btn-default btn-success pull-right" id="btn-enregistrer" type="submit" form="form"
                        data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> @ViewBag.Lang.Process ...">
                    <i class="fa fa-check"></i> @ViewBag.Lang.Save
                </button>

            </div>

        </div>

    </div>

</div>