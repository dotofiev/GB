
<!-- form 1 -->
<div class="modal fade bs-example-modal-lg" id="modal_form" role="alert" data-backdrop="static" data-keyboard="false">
    
    <div class="modal-dialog modal-lg">
        
        <div class="modal-content">
            
            <div class="modal-body">

                <!-- Header -->
                <p style="font-weight: bold; font-size: 18px;">
                    <!-- Title -->
                    <span id="modal_form_titre">
                        <i class="glyphicon glyphicon-info-sign text-info"></i> @ViewBag.Lang.Form
                    </span>
                    <!-- Close bouton -->
                    <button type="button" class="close float-right" data-dismiss="modal" aria-hidden="true" style="font-weight: bold;">
                        <i class="fa fa-times"></i>
                    </button>
                </p>

                <!-- Body -->
                <div id="modal_form">

                    <form method="post" id="form" name="form" data-parsley-validate>

                        <div class="row">

                            <!-- Id -->
                            <input type="hidden" id="form_id" name="id" value="0" />

                            <!-- ligne -->
                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_code">Code :</label>
                                    <input class="form-control" type="text" id="form_code" name="code" placeholder="Code.*" required />
                                </div>
                            </div>

                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_libelle">@ViewBag.Lang.Name :</label>
                                    <input class="form-control" type="text" id="form_libelle" name="libelle" placeholder="@ViewBag.Lang.Name .*" required />
                                </div>
                            </div>
                            <!-- ./ligne -->

                            <!-- ligne -->
                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_type_traitement">@ViewBag.Lang.Treatment_type :</label>
                                    <select class="form-control" id="form_type_traitement" name="type" required>
                                        @Html.Raw(ViewBag.donnee.HTML_type_traitement_societe)
                                    </select>
                                </div>
                            </div>

                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_base_de_calcul">@ViewBag.Lang.Calculation_base :</label>
                                    <select class="form-control" id="form_base_de_calcul" name="base_de_calcul" required>
                                        @Html.Raw(ViewBag.donnee.HTML_base_de_calcul_societe)
                                    </select>
                                </div>
                            </div>
                            <!-- ./ligne -->

                            <!-- ligne -->
                            <div class="col-lg-12">
                                <legend>
                                    <i class="fa fa-square"></i> @ViewBag.Lang.Agency
                                </legend>
                            </div>

                            <!-- Id -->
                            <input type="hidden" id="form_id_agence" name="id_agence" value="0" />

                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_code_agence">Code :</label>
                                    <input class="form-control" type="text" id="form_code_agence" placeholder="@ViewBag.Lang.Search_by code .*" required />
                                </div>
                            </div>

                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_libelle_agence">@ViewBag.Lang.Name :</label>
                                    <input class="form-control" type="text" id="form_libelle_agence" placeholder="@ViewBag.Lang.Search_by @((ViewBag.Lang.Name as string).ToLower()) .*" required />
                                </div>
                            </div>
                            <!-- ./ligne -->

                            <!-- ligne -->
                            <div class="col-lg-6">

                                <div class="row">

                                    <!-- ligne -->
                                    <div class="col-lg-12">
                                        <legend>
                                            <i class="fa fa-square"></i> @ViewBag.Lang.Account_transit
                                        </legend>
                                    </div>

                                    <!-- Id -->
                                    <input type="hidden" id="form_id_compte_transit" name="id_compte_transit" value="0" />

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_code_compte_transit">Code :</label>
                                            <input class="form-control form_id_compte" type="text" id="form_code_compte_transit" placeholder="@ViewBag.Lang.Search_by code .*" required />
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_libelle_compte_transit">@ViewBag.Lang.Name :</label>
                                            <input class="form-control" type="text" id="form_libelle_compte_transit" placeholder="@ViewBag.Lang.Search_by @((ViewBag.Lang.Name as string).ToLower()) .*" required />
                                        </div>
                                    </div>
                                    <!-- ./ligne -->

                                </div>

                            </div>

                            <div class="col-lg-6">

                                <div class="row">

                                    <!-- ligne -->
                                    <div class="col-lg-12">
                                        <legend>
                                            <i class="fa fa-square"></i> @ViewBag.Lang.Account_pay
                                        </legend>
                                    </div>

                                    <!-- Id -->
                                    <input type="hidden" id="form_id_compte_paiement" name="id_compte_paiement" value="0" />

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_code_compte_paiement">Code :</label>
                                            <input class="form-control" type="text" id="form_code_compte_paiement" placeholder="@ViewBag.Lang.Search_by code .*" required />
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_libelle_compte_paiement">@ViewBag.Lang.Name :</label>
                                            <input class="form-control" type="text" id="form_libelle_compte_paiement" placeholder="@ViewBag.Lang.Search_by @((ViewBag.Lang.Name as string).ToLower()) .*" required />
                                        </div>
                                    </div>
                                    <!-- ./ligne -->

                                </div>

                            </div>
                            <!-- ./ligne -->

                            <!-- ligne -->
                            <div class="col-lg-6">

                                <div class="row">

                                    <!-- ligne -->
                                    <div class="col-lg-12">
                                        <legend>
                                            <i class="fa fa-square"></i> @ViewBag.Lang.Account_loan
                                        </legend>
                                    </div>

                                    <!-- Id -->
                                    <input type="hidden" id="form_id_compte_pret" name="id_compte_pret" value="0" />

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_code_compte_pret">Code :</label>
                                            <input class="form-control" type="text" id="form_code_compte_pret" placeholder="@ViewBag.Lang.Search_by code .*" required />
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_libelle_compte_pret">@ViewBag.Lang.Name :</label>
                                            <input class="form-control" type="text" id="form_libelle_compte_pret" placeholder="@ViewBag.Lang.Search_by @((ViewBag.Lang.Name as string).ToLower()) .*" required />
                                        </div>
                                    </div>
                                    <!-- ./ligne -->

                                </div>

                            </div>

                            <div class="col-lg-6">

                                <div class="row">

                                    <!-- ligne -->
                                    <div class="col-lg-12">
                                        <legend>
                                            <i class="fa fa-square"></i> @ViewBag.Lang.Account_interest_pay
                                        </legend>
                                    </div>

                                    <!-- Id -->
                                    <input type="hidden" id="form_id_compte_interet_pret" name="id_compte_interet_pret" value="0" />

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_code_compte_interet_pret">Code :</label>
                                            <input class="form-control" type="text" id="form_code_compte_interet_pret" placeholder="@ViewBag.Lang.Search_by code .*" required />
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_libelle_compte_interet_pret">@ViewBag.Lang.Name :</label>
                                            <input class="form-control" type="text" id="form_libelle_compte_interet_pret" placeholder="@ViewBag.Lang.Search_by @((ViewBag.Lang.Name as string).ToLower()) .*" required />
                                        </div>
                                    </div>
                                    <!-- ./ligne -->

                                </div>

                            </div>
                            <!-- ./ligne -->                            

                        </div>

                    </form>

                </div>

                <!--Alert Message -->
                <div id="gbAlert"></div>

            </div>

            <div class="modal-footer">
                
                <!-- Bouton de fermiture du modal -->
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">
                    <i class="glyphicon glyphicon-remove"></i> @ViewBag.Lang.Close
                </button>
                
                <!-- Bouton d'enregistrement du formulaire -->
                <button class="btn btn-default btn-success pull-right" id="btn-enregistrer" type="submit" form="form"
                        data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> @ViewBag.Lang.Process ...">
                    <i class="fa fa-check"></i> @ViewBag.Lang.Save
                </button>

            </div>

        </div>

    </div>

</div>