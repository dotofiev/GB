
<!-- form 1 -->
<div class="modal fade bs-example-modal-lg" id="modal_form" role="alert" data-backdrop="static" data-keyboard="false">
    
    <div class="modal-dialog modal-lg">
        
        <div class="modal-content">
            
            <div class="modal-body">

                <!-- Header -->
                <p style="font-weight: bold; font-size: 18px;">
                    <!-- Title -->
                    <span id="modal_form_titre">
                        <i class="glyphicon glyphicon-info-sign text-info"></i> @ViewBag.Lang.Form
                    </span>
                    <!-- Close bouton -->
                    <button type="button" class="close float-right" data-dismiss="modal" aria-hidden="true" style="font-weight: bold;">
                        <i class="fa fa-times"></i>
                    </button>
                </p>

                <!-- Body -->
                <div id="modal_form">

                    <form method="post" id="form" name="form" data-parsley-validate>

                        <div class="row">

                            <!-- Id -->
                            <input type="hidden" id="form_id" name="id" value="0" />

                            <!-- ligne -->
                            <div class="col-lg-12">
                                <legend>
                                    <i class="fa fa-square"></i> @ViewBag.Lang.Agency
                                </legend>
                            </div>

                            <!-- Id -->
                            <input type="hidden" id="form_id_agence" name="id_agence" value="0" />

                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_code_agence">Code :</label>
                                    <input class="form-control" type="text" id="form_code_agence" placeholder="@ViewBag.Lang.Search_by code .*" required />
                                </div>
                            </div>

                            <div class="col-xs-12 col-lg-6">
                                <div class="form-group">
                                    <label for="form_libelle_agence">@ViewBag.Lang.Name :</label>
                                    <input class="form-control" type="text" id="form_libelle_agence" placeholder="@ViewBag.Lang.Search_by @((ViewBag.Lang.Name as string).ToLower()) .*" required />
                                </div>
                            </div>
                            <!-- ./ligne -->

                            <!-- ligne -->
                            <div class="col-xs-12 col-lg-12">
                                <div class="form-group">
                                    <label for="form_type">@ViewBag.Lang.Operation_type</label>
                                    <select class="form-control" id="form_type" name="type" onchange="if ($(this).val() === 'COMPENSATION') { $('.COMPENSATION').hide(); $('#COMPENSATION-titre').html($GB_DONNEE.Lang.Clearing.toLowerCase()); } else { $('.COMPENSATION').show(); $('#COMPENSATION-titre').html($GB_DONNEE.Lang.Inter_branch.toLowerCase()); }" required>
                                        @Html.Raw(ViewBag.donnee.HTML_type_compteAgence)
                                    </select>
                                </div>
                            </div>
                            <!-- ./ligne -->

                            <!-- ligne -->
                            <div class="col-lg-6">

                                <div class="row">

                                    <!-- ligne -->
                                    <div class="col-lg-12">
                                        <legend>
                                            <i class="fa fa-square"></i> @ViewBag.Lang.Account <span id="COMPENSATION-titre">@((ViewBag.Lang.Inter_branch as string).ToLower())</span>
                                        </legend>
                                    </div>

                                    <!-- Id -->
                                    <input type="hidden" id="form_id_compte" name="id_compte" value="0" />

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_code_compte">Code :</label>
                                            <input class="form-control" type="text" id="form_code_compte" placeholder="@ViewBag.Lang.Search_by code .*" required />
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_libelle_compte">@ViewBag.Lang.Name :</label>
                                            <input class="form-control" type="text" id="form_libelle_compte" placeholder="@ViewBag.Lang.Search_by @((ViewBag.Lang.Name as string).ToLower()) .*" required />
                                        </div>
                                    </div>
                                    <!-- ./ligne -->

                                </div>

                            </div>

                            <div class="col-lg-6 COMPENSATION">

                                <div class="row">

                                    <!-- ligne -->
                                    <div class="col-lg-12">
                                        <legend>
                                            <i class="fa fa-square"></i> @(ViewBag.Lang.Account + " " + (ViewBag.Lang.Issue as string).ToLower())
                                        </legend>
                                    </div>

                                    <!-- Id -->
                                    <input type="hidden" id="form_id_compte_emetteur" name="id_compte_emetteur" value="0" />

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_code_compte_emetteur">Code :</label>
                                            <input class="form-control" type="text" id="form_code_compte_emetteur" placeholder="@ViewBag.Lang.Search_by code .*" />
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="form_libelle_compte_emetteur">@ViewBag.Lang.Name :</label>
                                            <input class="form-control" type="text" id="form_libelle_compte_emetteur" placeholder="@ViewBag.Lang.Search_by @((ViewBag.Lang.Name as string).ToLower()) .*" />
                                        </div>
                                    </div>
                                    <!-- ./ligne -->

                                </div>

                            </div>
                            <!-- ./ligne -->

                        </div>

                    </form>

                </div>

                <!--Alert Message -->
                <div id="gbAlert"></div>

            </div>

            <div class="modal-footer">
                
                <!-- Bouton de fermiture du modal -->
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">
                    <i class="glyphicon glyphicon-remove"></i> @ViewBag.Lang.Close
                </button>
                
                <!-- Bouton d'enregistrement du formulaire -->
                <button class="btn btn-default btn-success pull-right" id="btn-enregistrer" type="submit" form="form"
                        data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> @ViewBag.Lang.Process ...">
                    <i class="fa fa-check"></i> @ViewBag.Lang.Save
                </button>

            </div>

        </div>

    </div>

</div>